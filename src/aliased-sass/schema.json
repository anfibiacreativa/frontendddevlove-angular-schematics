{
  "$schema": "http://json-schema.org/schema",
  "id": "SchematicsAliasedSassApp",
  "title": "Application Options Schema for Angular projects feat Aliased SASS",
  "type": "object",
  "properties": {
    "name": {
      "description": "The name of the application.",
      "type": "string",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "path": {
      "description": "The path to the styles folder",
      "type": "string",
      "$default": {
        "$source": "argv",
        "index": 1
      }
    }
  },
  "required": [
    "name", "path"
  ]
}